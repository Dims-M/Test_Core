@*@model IEnumerable<Test.Models.TablGoogles>*@

@{
    ViewData["Title"] = "Список Таблицы клиентов";
    //Layout = null; //можно раскоментить
}

<!DOCTYPE html>

<html>
<head>
    <title>Магазин смартфонов</title>
</head>
<body>
    <h4> метод контроллера GetTablesAlls</h4>
    <h3>Смартфоны в наличии</h3>
    <table>
        @*таблица*@
        <tr>
            <td>Модель</td> @*строки с товаром*@
            <td>Производитель</td>
            <td>Цена</td>
            <td></td>
        </tr>
        @foreach (var tables in Model)
        {
            <tr>
                <td>@tables.Name</td>
                <td>@tables.Company</td>
                <td>@tables.Price</td>
                @*<td><a href="~/Home/Buy/@phone.Id">Купить</a></td>*@
            </tr>
        }
    </table>
</body>
</html>

